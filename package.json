    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev"
  },
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "graphql": "^16.12.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0"
  },
  "packageManager": "bun@1.2.14"
}
